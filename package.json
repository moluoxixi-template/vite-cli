{
  "name": "@moluoxixi/create-app",
  "version": "2.0.400",
  "type": "module",
  "packageManager": "pnpm@10.8.0",
  "description": "Create Vue/React projects with atomic layered architecture",
  "main": "dist/index.js",
  "bin": {
    "create-mox": "./dist/index.js"
  },
  "files": [
    "LICENSE.txt",
    "README.md",
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --build tsconfig.build.json",
    "test": "tsx src/test.ts --min",
    "test:all": "tsx src/test.ts",
    "type-check": "tsc --noEmit",
    "lint:eslint": "eslint . --fix",
    "prepare": "git submodule update --init --recursive && node .husky/install.mjs",
    "lint-staged": "lint-staged",
    "commit": "git add . && git-cz",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version",
    "version:patch:git": "pnpm version patch",
    "version:minor:git": "pnpm version minor",
    "version:major:git": "pnpm version major",
    "publish:public": "pnpm build && pnpm publish --access public",
    "publish:beta": "pnpm build && pnpm publish --tag beta --access public",
    "publish:dry-run": "pnpm build && pnpm publish --dry-run",
    "release:patch": "pnpm version:patch && pnpm publish:public",
    "release:minor": "pnpm version:minor && pnpm publish:public",
    "release:major": "pnpm version:major && pnpm publish:public",
    "test:local": "pnpm build && node dist/index.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-warn-ignored"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "keywords": [
    "vite",
    "vue",
    "react",
    "template",
    "cli",
    "scaffold",
    "create-vue"
  ],
  "author": "1983531544@qq.com",
  "license": "MIT",
  "dependencies": {
    "chalk": "catalog:build",
    "commander": "catalog:build",
    "ejs": "catalog:build",
    "fs-extra": "catalog:build",
    "inquirer": "catalog:build",
    "jiti": "catalog:dev",
    "lodash-es": "catalog:build",
    "ora": "catalog:build",
    "yaml": "catalog:build"
  },
  "devDependencies": {
    "vite": "catalog:dev",
    "@commitlint/cli": "catalog:dev",
    "@commitlint/config-conventional": "catalog:dev",
    "@moluoxixi/eslint-config": "latest",
    "@types/ejs": "catalog:type",
    "@types/fs-extra": "catalog:type",
    "@types/inquirer": "catalog:type",
    "@types/lodash-es": "catalog:type",
    "@vue-macros/volar": "catalog:type",
    "@types/node": "catalog:type",
    "commitizen": "catalog:dev",
    "cz-customizable": "catalog:dev",
    "eslint": "catalog:dev",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "engines": {
    "node": ">=20.18.0"
  }
}
